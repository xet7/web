.row.settings-panel.ng-cloak(ng-controller="CtrlSettingsPersonal")
	form.settings.col-xs-12.col-xs-offset-6
		//- h4 Picture
		//- .row.settings-row
		//- 	.col-xs-7
		//- 		img.img-responsive(src='img/avatar.svg')
		//- 	.col-xs-17
		//- 		p.profile-description.text-muted
		//- 			| Your picture is only shown in mails to recipents in your contacts. Itâ€˜s only purpose is to make your messages more personal. It is not used for anything else.
		h4 {{'MAIN.SETTINGS.PROFILE.TITLE_NAME' | translate}}
		ul.list-group
			li.list-group-item
				.text-control
					label {{'MAIN.SETTINGS.PROFILE.LB_USERNAME' | translate}}
					input.form-control(disabled='', ng-model="name")
					span
			li.list-group-item
				.text-control
					label {{'MAIN.SETTINGS.PROFILE.LB_FIRST_NAME' | translate}}
					input.form-control(ng-model="settings.firstName")
			li.list-group-item
				.text-control
					label {{'MAIN.SETTINGS.PROFILE.LB_LAST_NAME' | translate}}
					input.form-control(ng-model="settings.lastName")
			li.list-group-item
				.text-control
					label {{'MAIN.SETTINGS.PROFILE.LB_DISPLAY_NAME' | translate}}
					input.form-control(ng-model="settings.displayName")
		h4 {{'MAIN.SETTINGS.PROFILE.TITLE_SIGNATURE' | translate}}
		ul.list-group
			li.list-group-item
				label {{'MAIN.SETTINGS.PROFILE.LB_SIGNATURE_ENABLED' | translate}}
				.control
					label.switch
						input(type='checkbox', ng-model="settings.isSignatureEnabled")
						i
			li.list-group-item(collapse="!settings.isSignatureEnabled")
				.text-control
					.signature
						div(text-angular="", ta-toolbar="[]", ng-model="settings.signatureHtml")
							br
							br
							p.text-center
								a(href="https://lavaboom.com", target="_blank")
									strong | {{'MAIN.SETTINGS.PROFILE.LB_SIGNATURE_LN1' | translate}}
									br
									| {{'MAIN.SETTINGS.PROFILE.LB_SIGNATURE_LN2' | translate}}
					
		h4 {{'MAIN.SETTINGS.PROFILE.TITLE_NEWSLETTER' | translate}}
		ul.list-group
			li.list-group-item
				label {{'MAIN.SETTINGS.PROFILE.LB_SEND_ME_NEWS' | translate}}
				.control
					label.switch
						input(type='checkbox', ng-model="settings.isSubscribedToNews")
						i
		br
		ul.list-group(ng-show="status")
			li.list-group-item
				label(ng-bind="status")